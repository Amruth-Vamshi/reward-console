{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App.js",
            "program": "${workspaceRoot}/packages/walkin-platform-server/src/index.js",
            "outFiles": [
                "${workspaceRoot}/packages/**/dist/**/*"
            ],
            "env": {
                "NODE_CONFIG_DIR": "${workspaceRoot}/packages/walkin-platform-server/dist/config",
                "NODE_ENV": "debug"
            },
            "sourceMaps": true,
            "preLaunchTask": "build",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnFirstSessionStart"
        }
    ]
}